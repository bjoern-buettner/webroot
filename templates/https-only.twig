{% for host in virtualhosts %}
    <VirtualHost *:80>
        {% include 'http-virtualhost.twig' %}
    </VirtualHost>
    <VirtualHost *:443>
        {% set domain=host.domain %}
        {% include 'https-virtualhost.twig' %}
    </VirtualHost>
    {% for domain in host.aliases %}
        <VirtualHost *:443>
            {% include 'https-virtualhost.twig' %}
        </VirtualHost>
    {% endfor %}
{% endfor %}